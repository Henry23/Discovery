               <div><%= f.label :'terminal_id' %>                  
                 <%= f.collection_select(:terminal_id ,Terminal.all, :id, :nombre) %><br />  </div> 
          
               <div><%= f.label :'administrador' %>
                 <%= f.select :'administrador', {"Si" => true, "No" => false}%> <br/>  </div>
           
           
           <div><%= f.submit "Update" %></div>
           <% end %>
           
           <h3>Cancelar mi Cuenta</h3>
           
           <p>No estoy Feliz? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
           <%= link_to "Back", :back %>
        </div>      
      </div>
  </div>
